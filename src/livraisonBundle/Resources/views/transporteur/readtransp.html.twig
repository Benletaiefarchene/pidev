{% extends "base.html.twig" %}
{% block container %}
    <div class="row">
        <div class="col-md-12">
            <div class="tabbable-line">

                <div class="tab-content">
                    <div class="tab-pane active fontawesome-demo" id="tab1">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card card-box">
                                    <div class="card-head">
                                        <header> Liste des transporteurs </header>

                                    </div>
                                    <div class="card-body ">
                                        <div class="row">
                                            <div class="col-md-6 col-sm-6 col-6">
                                                <div class="btn-group">
                                                    <a href="http://radixtouch.in/templates/admin/smart/source/light/add_professor.html" id="addRow"
                                                       class="btn btn-info">
                                                        Add New <i class="fa fa-plus"></i>
                                                    </a>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="table-scrollable">
                                            <table
                                                    class="table table-striped table-bordered table-hover table-checkable order-column valign-middle"
                                                    id="example4">

                                                <tbody>
                                                <tr class="odd gradeX">

                                                    {% for t in transp %}
                                                <thead>
                                                <tr style="background-color: #00A65A">

                                                    <th> Nom </th>
                                                    <th> Pr√©nom</th>
                                                    <th> Tel</th>
                                                    <th> Email </th>
                                                    <th> Action </th>

                                                </tr>
                                                </thead>
                                                <tr>
                                                    <td>{{ t.nom }}</td>
                                                    <td>{{ t.prenom }}</td>
                                                    <td>{{ t.tel}}</td>
                                                    <td>{{ t.email }}</td>


                                                    <td>
                                                        <a href="{{ path ('ModifierTransporteur',{'id':t.id}) }}"
                   class="btn btn-primary btn-xs">
                                                        <i class="fa fa-pencil"></i>
                                                        </a>
                                                        <a  href="{{ path ('SupprimerTransporteur',{'id':t.id}) }}">
                                                            <button class="btn btn-danger btn-xs">
                                                                <i class="fa fa-trash-o "></i>
                                                            </button>
                                                    </td>


                                                </tr>
                                                <tr>

                                                    <th> id </th>
                                                    <th> refence </th>
                                                    <th> date </th>
                                                    <th> lieu </th>
                                                    <th> Etat </th>

                                                </tr>
                                                    {% for x in t.livraison %}
                                                <tr>
                                                        <td>{{ x.id }}</td>
                                                        <td>{{ x.reference }}</td>
                                                        <td>{{ x.datelivraison|date }}</td>
                                                        <td>{{ x.lieu }}</td>
                                                </tr>
                                                    {% endfor %}


                                                </tbody>

                                                {% endfor %}
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}