{% extends "Page.html.twig" %}
{% block body %}
    <section class="module bg-dark-60 about-page-header" data-background="{{ asset('front/images/shop/b1.jpg')}}">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <h2 class="module-title font-alt">Add Post</h2>

                </div>
            </div>
        </div>
    </section>
{% endblock body %}
{% block container %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <center><h2 >

                Create your Post !
            </h2></center>
        <br><br>
            {{ form_start(Form) }}

            {{ form_widget(Form.title,{'attr':{'type':'text','class':'form-control','placeholder':'Title...'}}) }}
            <br> <br> <br>
            {{ form_widget(Form.description,{'attr':{'type':'textarea','class':'form-control','placeholder':'Description...'}}) }}
            <br> <br> <br>
            {{ form_widget(Form.photo,{'attr':{'type':'text','class':'form-control','placeholder':'photo...'}}) }}
            <br> <br> <br>
            <center> {{ form_widget(Form.Submit,{'attr':{'type':'text','class':'btn btn-common','placeholder':'Submit...'}}) }}        </center>
            <br> <br> <br>
            {{ form_end(Form) }}

    {% elseif is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
        <br><br><br>

        <div class="alert alert-warning" role="alert">
            <h2>
                In order to post in our blog you need to be connected, if you are not
                you can join us by clicking <a href="{{ path('fos_user_registration_register') }}">HERE</a>
                Or if you already have an account click <a href="{{ path('fos_user_security_login') }}" >HERE</a> to connect !
            </h2>

        </div>
    {% endif %}
{% endblock %}