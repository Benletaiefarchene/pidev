            console.log(id);
            //ajouter blockage
            $.ajax({
                url:'/PIDEV/web/app_dev.php/blog/block/'+id,
                type:'get',
                success:function(result){
                    console.log(result);

                }
            });
        }
        function unblock(id) {
            console.log(id);
            //ajouter blockage
            $.ajax({
                url:'/PIDEV/web/app_dev.php/blog/unblock/'+id,
                type:'get',
                success:function(result){
                    console.log(result);

                }
            });
        }
    </script>

{% endblock %}
